# Birthday Website Environment Configuration
# Copy this to .env.local if needed for custom configurations

# Site Information
NEXT_PUBLIC_SITE_NAME=Birthday Website
NEXT_PUBLIC_SITE_URL=http://localhost:5000

# Feature Flags
NEXT_PUBLIC_ENABLE_MUSIC=true
NEXT_PUBLIC_ENABLE_CONFETTI=true
NEXT_PUBLIC_ENABLE_ANIMATIONS=true

# Animation Settings
NEXT_PUBLIC_ANIMATION_DURATION=1.5
NEXT_PUBLIC_ANIMATION_QUALITY=high

# Optional: For future API integration
# NEXT_PUBLIC_API_URL=https://api.example.com

# Development
NODE_ENV=development
